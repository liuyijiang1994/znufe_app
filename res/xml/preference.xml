<!--设置模块里面的东西在这里  -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="流量控制" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_imageLoad"
            android:summary="默认WIFI自动加载图片"
            android:title="自动接收图片" />
        <PreferenceScreen android:title="离线下载" >
            <PreferenceCategory android:title="时间设置" >
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:summary="定时离线下载仅在WIFI下有效"
                    android:title="开启离线下载" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="缓存设置" >
        <Preference
            android:key="pref_clearCache"
            android:summary="0KB"
            android:title="清除缓存" >
        </Preference>
    </PreferenceCategory>
    
