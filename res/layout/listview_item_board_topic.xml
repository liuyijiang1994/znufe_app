<?xml version="1.0" encoding="utf-8"?>
<!-- 选定版块下的帖子列表ListView的选项布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_topic"
    android:orientation="horizontal"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="4.0dip" >

    <LinearLayout
        android:id="@+id/ly_topic_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="3.0dip" >

        <ImageView
            android:id="@+id/pic_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3.0dip"
            android:src="@drawable/picture" />

        <TextView
            android:id="@+id/topic_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="xxxxxxxx"
            android:textColor="@color/black"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_topic_title"
        android:paddingLeft="3.0dip"
        android:weightSum="2.0" >

        <TextView
            android:id="@+id/topic_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:singleLine="true"
            android:text="author"
            android:textColor="#ff0066cc"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/topic_views_replies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#ff929292"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/topic_dateline"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2011-8-19 15:39"
            android:textColor="#ff929292"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>