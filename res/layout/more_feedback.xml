<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <!-- title bar -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/title_back_confirm" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout_title"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/bg_feedback" >

        <TextView android:id="@+id/text_more_feedback"
            android:layout_width="fill_parent"
            android:layout_height="26.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8.0dip"
            android:text="@string/tel"
            android:textColor="#ff0066cc"
            android:textStyle="italic"
            android:textSize="13.0sp" />

        <EditText
            android:id="@+id/more_feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/text_more_feedback"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="8.0dip"
            android:drawSelectorOnTop="false"
            android:background="@drawable/text_border"
            android:gravity="top"
            android:maxLines="10"
            android:textColorHint="#ffaaaaaa"
            android:textSize="15.0sp"
            android:hint="@string/more_feedback_hint"/>
    </RelativeLayout>

</RelativeLayout>